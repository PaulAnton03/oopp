<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="subTaskView" spacing="10.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.components.SubTaskCtrl">
    <children>
        <CheckBox fx:id="checkBox" mnemonicParsing="false" onAction="#checkBoxClicked" prefHeight="28.0" prefWidth="28.0" />
        <TextField fx:id="title" prefHeight="28.0" prefWidth="300.0" styleClass="formTextInput" />
        <Button fx:id="deleteButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#delete" prefHeight="28.0" prefWidth="28.0" text="X">
            <font>
                <Font size="13.0" />
            </font>
            <styleClass>
                <String fx:value="formButton" />
                <String fx:value="deleteButton" />
            </styleClass>
        </Button>
        <Button fx:id="up" layoutX="447.0" layoutY="1.0" mnemonicParsing="false" onAction="#up" prefHeight="28.0" prefWidth="28.0" style="-fx-base: transparent; -fx-padding: 0;" />
        <Button fx:id="down" layoutX="447.0" layoutY="33.0" mnemonicParsing="false" onAction="#down" prefHeight="28.0" prefWidth="28.0" style="-fx-base: transparent;" />

    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</HBox>
