                  <CheckBox layoutX="83.0" layoutY="10.0" mnemonicParsing="false" text="Projects" />
                  <CheckBox layoutX="156.0" layoutY="10.0" mnemonicParsing="false" text="Optional" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets top="5.0" />
         </padding>
      </VBox>
   </center>
   <top>
      <HBox prefHeight="50.0" prefWidth="600.0" styleClass="navbar" BorderPane.alignment="CENTER">
