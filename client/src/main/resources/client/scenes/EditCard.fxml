               </font>
            </Text>
            <TextField fx:id="changeTitle" prefHeight="40.0" prefWidth="300.0" promptText="Title" styleClass="formTextInput" />
            <TextArea fx:id="changeDesc" prefHeight="100.0" prefWidth="300.0" promptText="Description" styleClass="formTextInput" />
            <AnchorPane prefHeight="26.0" prefWidth="171.0">
               <children>
                  <Button layoutX="200.0" layoutY="-1.0" mnemonicParsing="false" onAction="#clearForm" prefHeight="19.0" prefWidth="70.0" styleClass="formButton" text="Clear" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
