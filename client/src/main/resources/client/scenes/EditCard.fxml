<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="600.0" stylesheets="/client/styles/addCard.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.EditCardCtrl">
   <center>
      <VBox alignment="CENTER" fillWidth="false" prefHeight="650.0" prefWidth="600.0" spacing="15.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Edit Card" textAlignment="CENTER" wrappingWidth="600.0">
               <font>
                  <Font size="32.0" />
               </font>
            </Text>
            <TextField fx:id="changeTitle" prefHeight="40.0" prefWidth="400.0" promptText="Title" styleClass="formTextInput" VBox.vgrow="ALWAYS" />
            <TextArea fx:id="changeDesc" prefHeight="100.0" prefWidth="400.0" promptText="Description" styleClass="formTextInput" VBox.vgrow="NEVER" />
            <AnchorPane prefHeight="27.0" prefWidth="400.0">
               <children>
                  <Button layoutX="276.0" layoutY="1.0" mnemonicParsing="false" onAction="#addSubTask" styleClass="formButton" text="+" AnchorPane.leftAnchor="100.0" AnchorPane.topAnchor="0.0" />
                  <Label contentDisplay="CENTER" layoutX="14.0" layoutY="7.0" prefHeight="25.0" prefWidth="84.0" text="SubTasks" textAlignment="CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <font>
                        <Font size="16.0" />
                     </font></Label>
               </children>
            </AnchorPane>
            <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" prefHeight="150.0" prefWidth="400.0" VBox.vgrow="NEVER">
               <content>
                  <VBox fx:id="subTaskView" prefWidth="400.0" />
               </content></ScrollPane>
            <Label prefHeight="14.0" prefWidth="400.0" text="Tags">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <AnchorPane prefHeight="200.0" prefWidth="404.0">
               <children>
                  <Label layoutX="9.0" layoutY="6.0" text="Select Tags" />
                  <HBox alignment="CENTER" layoutX="1.0" layoutY="100.0" prefHeight="41.0" prefWidth="403.0" spacing="20.0">
                     <children>
                        <Label text="New Tag" />
                        <Button fx:id="addTagButton" mnemonicParsing="false" onAction="#createTag" text="+" />
                        <TextField fx:id="tagField" prefHeight="25.0" prefWidth="117.0" />
                        <ColorPicker fx:id="colourPicker" onAction="#pickColor" prefHeight="25.0" prefWidth="122.0" />
                     </children>
                  </HBox>
                  <AnchorPane layoutX="9.0" layoutY="23.0" prefHeight="72.0" prefWidth="385.0" style="-fx-background-color: WHITE;">
                     <children>
                        <FlowPane fx:id="tagArea" layoutX="-6.0" prefHeight="72.0" prefWidth="395.0" />
                     </children>
                  </AnchorPane>
                  <Text fx:id="emptyErr" fill="#eb0000" layoutX="114.0" layoutY="153.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Tag name cannot be empty!" visible="false">
                     <font>
                        <Font size="11.0" />
                     </font>
                  </Text>
                  <HBox alignment="CENTER" layoutX="-1.0" layoutY="166.0" prefHeight="57.0" prefWidth="407.0" spacing="50.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#cancel" prefHeight="26.0" prefWidth="70.0" styleClass="formButton" text="Cancel" />
                        <Text fx:id="tagAssignText" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" visible="false" />
                        <Button mnemonicParsing="false" onAction="#saveCardChanges" prefHeight="27.0" prefWidth="70.0" styleClass="formButton" text="Save" />
                     </children>
                  </HBox>
               </children>
            </AnchorPane>
         </children>
         <padding>
            <Insets top="5.0" />
         </padding>
      </VBox>
   </center>
   <top>
      <HBox prefHeight="50.0" prefWidth="600.0" styleClass="navbar" BorderPane.alignment="CENTER">
         <children>
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#cancel" prefHeight="51.0" prefWidth="2000.0" text="Back" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </top>
   <bottom>
      <Pane prefHeight="34.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
