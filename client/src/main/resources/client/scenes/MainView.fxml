<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.MainViewCtrl">
   <top>
      <HBox prefHeight="50.0" prefWidth="600.0" styleClass="navbar" stylesheets="@../styles/navbar.css" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="navbarBackButton" mnemonicParsing="false" onAction="#btnBackClicked" prefHeight="60.0" prefWidth="2000.0" text="Back">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="navbarCreateButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#btnCreateClicked" prefHeight="60.0" prefWidth="2000.0" text="Create Board">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="navbarJoinButton" layoutX="166.0" layoutY="10.0" mnemonicParsing="false" onAction="#btnJoinClicked" prefHeight="60.0" prefWidth="2000.0" text="Join Board">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="navbarAddButton" mnemonicParsing="false" onAction="#btnAddClicked" prefHeight="100.0" prefWidth="2000.0" text="Add List">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="navbarBoardSettings" mnemonicParsing="false" onAction="#btnSettingsClicked" prefHeight="100.0" prefWidth="2000.0" text="Board settings">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </top>
   <right>
      <AnchorPane prefHeight="449.0" prefWidth="152.0" BorderPane.alignment="CENTER">
         <children>
            <Button layoutX="34.0" layoutY="67.0" mnemonicParsing="false" prefHeight="30.0" style="fx-background-color: #d9d9d9;" text="New list" AnchorPane.leftAnchor="34.0" AnchorPane.topAnchor="67.0">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Text fx:id="displayBoardName" layoutX="63.0" layoutY="42.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
         </children>
      </AnchorPane>
   </right>
   <center>
      <ScrollPane hbarPolicy="ALWAYS" prefHeight="500.0" prefWidth="800.0" vbarPolicy="NEVER" BorderPane.alignment="CENTER">
         <content>
            <HBox fx:id="boardView" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="501.0" prefWidth="800.0" spacing="20.0" />
         </content>
      </ScrollPane>
   </center>
</BorderPane>
