<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.JoinBoardsCtrl">
    <top>
        <HBox prefHeight="50.0" prefWidth="600.0" styleClass="navbar" stylesheets="/client/styles/navbar.css" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="navbarBackButton" mnemonicParsing="false" onAction="#btnBackClicked" prefHeight="100.0" prefWidth="2000.0" text="Back">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
                <Button fx:id="navbarCreateButton" mnemonicParsing="false" onAction="#btnCreateClicked" prefHeight="100.0" prefWidth="2000.0" text="Create board">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </top>
    <center>
        <HBox fx:id="grid" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <ScrollPane prefHeight="270.0" prefWidth="1000.0">
                    <content>
                        <VBox fx:id="boardPopulation" prefHeight="200.0" prefWidth="100.0" />
                    </content>
                </ScrollPane>
            </children>
        </HBox>
    </center>
</BorderPane>
